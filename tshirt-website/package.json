{
  "name": "shirtwebsite",
  "version": "1.0.0",
  "description": "Static site for ComfyTees",
  "main": "index.js",
  "scripts": {
    "build": "eleventy",
    "serve": "eleventy --serve",
    "lint": "eslint . && stylelint '**/*.css' && htmlhint 'src/**/*.njk'",
    "format": "prettier --write .",
    "audit": "lhci autorun"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "prettier --write"],
    "*.css": ["stylelint --fix", "prettier --write"],
    "*.njk": ["htmlhint", "prettier --write"],
    "*.html": ["htmlhint", "prettier --write"]
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@lhci/cli": "^0.15.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.38.0",
    "htmlhint": "^1.7.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0"
  }
}
