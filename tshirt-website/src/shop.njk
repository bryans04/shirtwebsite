{% set title = "ComfyTees | Shop" %}
{% extends "layout.njk" %}

{% block content %}
<section class="shop">
  <h1 class="section-title">Shop Our T-Shirts</h1>
  <div class="product-grid">
    <div class="product-card">
      <img src="/images/tshirt1.jpg" alt="Classic Comfort Tee - Man in grey t-shirt">
      <h3>Classic Comfort Tee</h3>
      <p class="product-price">$25.00</p>
      <a href="/product/" class="btn btn-secondary btn-small">View Details</a>
    </div>
    <div class="product-card">
      <img src="/images/tshirt2.jpg" alt="Eco-Friendly Tee - Woman in green t-shirt">
      <h3>Eco-Friendly Tee</h3>
      <p class="product-price">$28.00</p>
      <a href="/product/" class="btn btn-secondary btn-small">View Details</a>
    </div>
    <div class="product-card">
      <img src="/images/tshirt3.jpg" alt="Soft Summer Tee - Woman in peach t-shirt on beach">
      <h3>Soft Summer Tee</h3>
      <p class="product-price">$22.00</p>
      <a href="/product/" class="btn btn-secondary btn-small">View Details</a>
    </div>
    <div class="product-card">
      <img src="https://placehold.co/400x400/F3F4F6/222222?text=New+Arrival" alt="New Arrival Tee Placeholder">
      <h3>Organic V-Neck Tee</h3>
      <p class="product-price">$26.00</p>
      <a href="/product/" class="btn btn-secondary btn-small">View Details</a>
    </div>
    <div class="product-card">
      <img src="https://placehold.co/400x400/F3F4F6/222222?text=Popular+Fit" alt="Popular Fit Tee Placeholder">
      <h3>Relaxed Fit Tee</h3>
      <p class="product-price">$24.00</p>
      <a href="/product/" class="btn btn-secondary btn-small">View Details</a>
    </div>
    <div class="product-card">
      <img src="https://placehold.co/400x400/F3F4F6/222222?text=Limited+Edition" alt="Limited Edition Tee Placeholder">
      <h3>Graphic Tee</h3>
      <p class="product-price">$30.00</p>
      <a href="/product/" class="btn btn-secondary btn-small">View Details</a>
    </div>
  </div>
</section>
{% endblock %}
